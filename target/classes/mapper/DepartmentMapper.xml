<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdp.dao.DepartmentDao">

    <resultMap id="departmentMap" type="com.cdp.model.Department">
        <id column="D_id" property="D_id"/>
        <result column="D_name" property="d_name"/>
        <result column="D_duty" property="d_duty"/>
        <result column="D_name" property="d_name"/>
        <result column="D_phone" property="d_phone"/>
        <result column="C_id" property="C_id"/>
    </resultMap>
    <sql id="Department_where">
        <where>
            <if test="d_id != null and d_id !=''">and D_id = #{d_id}</if>
            <if test="d_name != null and d_name !=''">and D_name = #{d_name}</if>
        </where>
    </sql>
    <sql id="Department_where_update">
        <where>
            <if test="updated_id != null updated_id !=''">and D_id = #{updated_id}</if>
            <if test="updated_name != null updated_name !=''">and D_name = #{updated_name}</if>
            <if test="updated_duty != null updated_duty !=''">and D_duty = #{updated_duty}</if>
            <if test="updated_phone != null updated_phone !=''">and D_phone = #{updated_phone}</if>
        </where>
    </sql>
    <select id="selectAllDepartment" resultMap="departmentMap">
        select * from department
        <include refid="Department_where"/>
    </select>


    <select id="count" resultType="int">
        select count(*) from department
    </select>

</mapper>